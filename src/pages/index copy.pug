  a(class="swiper-slide info-box" href="#none")
    p.car-top-icon: img(src=`${imgPath}/main/icon_release.png`, alt="아이콘")
    p.car-name #{carName}
    div.img-area: img(src=`${imgPath}/car/car_relese${num}.png`, alt="자동차이미지")
    div.car-info  
      div.car-price-box
