
extends ../../template/layout_sub



//- -let g_car_num = 0;


mixin carInfoBox(carName,imgName, price=0, link="#none")
  -let car_num;
  -g_car_num++;
  if(g_car_num < 10)
    -car_num= "0" + g_car_num;

  li.ani-sty01: a(href=`${link}`) 
    .car-top  
      p.car-num #{car_num}
      div.car-top-icon: img(src=`${imgPath}/main/icon_special.png`, alt="아이콘")
    .img-area
      img(src=`${imgPath}/car/${imgName}`, alt="이미지")
      //- .img-box
    .car-info-area 
      p.car-name= carName
      .car-price-box
        p.price-cancel &nbsp;#{(price*(1-0.1)).toString().replace(/\B(?=(\d{3})+(?!\d))/,",")}&nbsp;&nbsp;
        p.price-main
          | 월 &nbsp;
          span.num #{price.toString().replace(/\B(?=(\d{3})+(?!\d))/,",")}
          span.won 원~
      .car-etc-box
        p 세금/보험료/방문정비 포함
    .btn-detail 견적 신청하기


  
block content
  -let g_car_num = 0;
  
  main(class="wrap-container page-sub-product")
    section(class="sect product-sect-cont")
      div(class="sect-container")
        div(class="product-area")
          div(class="product-img-main")
            div(class="img-box")
              img(src=`${imgPath}/car/01_Hatchback/A_Class_Hatchback.png`, alt="이미지")
          div(class="product-car-info-area") 
            p(class="car-info-title") 신차장기렌트카 카니발
            ul(class="car-info-ul")
              li
                p 제조사
                p 기아자동차
              li 
                p 차종
                p 카니발
              li 
                p 출시연도
                p 2021

            div(class="price-area")
              div(class="price-box price-info")
                p(class="p-title") 렌트
                div(class="price-cont")
                  p(class="p-price") 204,620<span class="won">원</span>
                
                //- div(class="price-cont")
                //-   ul(class="price-info-ul")
                //-     li
                //-       p.name 선수금
                //-       p.price 204,620<span class="won">원</span>
                //-     li
                //-       p.name 보조금
                //-       p.price 400,520<span class="won">원</span>
              
              div(class="price-box price-lease btn-lease")
                p(class="p-title") 리스
                div(class="price-cont")
                  p(class="p-price") 204,620<span class="won">원</span>
            
            div(class="tip-box")
              p ※ 계약조건 48개월 / 연간 2만km / 선수금 30% / 만 26세 이상 보험
              p ※ 포함항목 : 등록세, 취득세, 자동차세, 보험료 및 기타
              p ※ 본 견적은 보증금 & 선수금이 적용된 월평균 납입 예상요금입니다.

            button(type="button" class="btn-car-quote fn-open-modal-quote") 빠른상담신청

            

